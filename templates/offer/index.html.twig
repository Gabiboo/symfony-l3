{% extends '/public/layout.html.twig' %}

{% block title %}Offre{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-12">
            <div class="full">
                <div class="heading_main text_align_center">
                    <h2><span class="theme_color text-align-center"></span>Offres</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
    {% for offer in offers %}
        <div class="col-md-6 col-sm-6 col-xs-12">
            <div class="full news_blog">
                <img class="img-responsive" src="{{ asset('images/b1.png') }}" alt="#" />
                <div class="overlay"><a class="main_bt transparent" href="{{ path('offer_show', {'id': offer.id}) }}">View</a></div>
                <div class="blog_details">
                    <h3>{{ offer.titre }}</h3>
                    <p>{{offer.intro}}</p>
                    <p>{{offer.prix}}â‚¬</p>
                </div>
            </div>
        </div>
        {% else %}
        <h3> Aucune offre n'est disponible pour le moment... revenez plus tard !</h3>
   {% endfor %}
    </div>
 
{% endblock %}