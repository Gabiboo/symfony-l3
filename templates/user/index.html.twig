                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('user_show_a', {'id': user.id}) }}">Voir le profil</a></br>
                    <a href="{{ path('user_edit_a', {'id': user.id}) }}">Ã‰diter le profil</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun utilisateurs n'est inscrit !</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
