{% extends '/espace-client/layout.html.twig' %}

{% block title %}Welcome!{% endblock %}

{% block layout %}

    <div class="section first">
        <div class="container">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
            <div class="row">
                <div class="col-md-12">
                    {% block body %}
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <h1> Mes souscriptions </h1>
    </div>
    
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ offer.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ offer.titre }}</td>
            </tr>
            <tr>
                <th>Intro</th>
                <td>{{ offer.intro }}</td>
            </tr>
            <tr>
                <th>Offre</th>
                <td>{{ offer.offre }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ offer.prix }}</td>
            </tr>
        </tbody>
    </table>
    
    <!-- Reste des éléments graphiques -->

{% endblock %}