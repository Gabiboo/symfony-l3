{% extends '/espace-client/layout.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="full">
                <div class="heading_main text_align_center">
                    <h2><span class="theme_color text-align-center"></span>Mes informations personnelles</h2>
                </div>
            </div>
        </div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Civilité</th>
                <td>{{ user.civilite }}</td>
            </tr>
            <tr>
                <th>Numéro de téléphone</th>
                <td>{{ user.telephone }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ user.ville }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ user.pays }}</td>
            </tr>
            <tr>
                <th>Mon Numéro de Sécurité Social</th>
                <td>{{ user.numeroDeSecu }}</td>
            </tr>
            
        </tbody>
    </table>

    <div class="text_align_right"> 
        <a class="btn btn-dark" href="{{ path('user_edit', {'id': user.id}) }}">Modifier mes informations</a>
    </div>
   
{% endblock %}
