{% extends '/espace-agent/layout.html.twig' %}

{% block title %}Souscription index{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="full">
                <div class="heading_main text_align_center">
                    <h2><span class="theme_color"></span>Souscriptions par utilisateur :</h2>
                </div>
            </div>
        </div>
    </div>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="row">Id</th>
                <th scope="row">Etat</th>
                <th class=" text_align_right" scope="row">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for souscription in souscriptions %}
            <tr>
                <td>{{ souscription.id }}</td>
                <td>{{ souscription.etat }}</td>
                <td class="text_align_right">
                    <a class="btn btn-info" href="{{ path('souscription_show', {'id': souscription.id}) }}">show</a>
                    <a class="btn btn-dark" href="{{ path('souscription_edit', {'id': souscription.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Personne n'a souscrit aux offres du site ou bien aucune offre n'est actuellement publi√©.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
